<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
              version="2.2">

    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-action>#{navigationController.processHome}</from-action>
            <from-outcome>page</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{navigationController.processMovies}</from-action>
            <from-outcome>page</from-outcome>
            <to-view-id>/filmek.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{navigationController.processContact}</from-action>
            <from-outcome>page</from-outcome>
            <to-view-id>/kapcsolat.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{navigationController.processGYIK}</from-action>
            <from-outcome>page</from-outcome>
            <to-view-id>/gyik.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
         <navigation-case>
            <from-action>#{navigationController.processAdmin}</from-action>
            <from-outcome>page</from-outcome>
            <to-view-id>/secured/adminpage.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{navigationController.processLogin}</from-action>
            <from-outcome>page</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
   
</faces-config>